#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
//      |  Q  |  W  |  F  |  P  |  B  |         |  J  |  L   |  U  |  Y  |  '  |
//      |  A  |  R  |  S  |  T  |  G  |         |  M  |  N   |  E  |  I  |  O  |
//      |  Z  |  X  |  C  |  D  |  V  |         |  K  |  H   |  ,  |  .  |  /  |
//                  | CMD | LWR | SPC |         | ENT | RSE  | ALT |

bindings = <
      &kp TAB &kp Q   &kp W   &kp F   &kp P   &kp B   &kp J   &kp L   &kp U   &kp Y   &kp SQT &kp TAB      
      &kp LCTRL &kp A   &kp R   &kp S   &kp T   &kp G   &kp M   &kp N   &kp E   &kp I   &kp O   &kp LCTRL      
      &kp LSHFT &kp Z   &kp X   &kp C   &kp D   &kp V   &kp K   &kp H   &kp COMMA &kp DOT &kp FSLH &kp LSHFT      
      &kp LGUI &mo 1 &kp SPACE &kp RET &mo 2 &kp RALT   
>;
};
                lower_layer {
// ------------------------------------------------------------------------
// | ESC |  7  |  8  |  9  |    |          |     |     |      |    |  BKSP  |
// | TAB |  4  |  5  |  6  |    |          |     | LFT | DWN  | UP |  RGT   |
// |  0  |  1  |  2  |  3  |    |          |     |     |      |    |        |
// | GUI  |    |     |               | SHFT|  |  |
// ------------------------------------------------------------------------

bindings = <
      &kp TAB &kp GRAVE &kp TILDE &kp AMPS &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp TAB      
      &kp LCTRL &kp LCTRL &kp DLLR &kp PRCNT &kp CARET &kp MINUS &kp EQUAL &kp LBKT &kp RBKT &kp LCTRL      
      &kp LSHFT &kp LSHFT &kp EXCL &kp AT &kp HASH &kp UNDER &kp PLUS &kp LBRC &kp RBRC &kp PIPE &kp LSHFT      
      &kp LGUI &kp SPACE &kp RET &kp RALT 
>;
};

                raise_layer {
// ------------------------------------------------------------------------
// |  `  |  ~  |     |     |              |     |     |  &  |  *  |  (  |  )  |
// | CTRL |  $  |  %  |  ^  |              |     |  -  |  =  |  [  |  ]  |    |
// | SHFT |  !  |  @  |  #  |              |     |  _  |  +  |  {  |  }  | "|" |
// | GUI |     | SPC |               | ENT |     | ALT |
// ------------------------------------------------------------------------

bindings = <
      &kp TAB &kp GRAVE &kp TILDE &kp AMPS &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp TAB      
      &kp LCTRL &kp LCTRL &kp DLLR &kp PRCNT &kp CARET &kp MINUS &kp EQUAL &kp LBKT &kp RBKT &kp LCTRL      
      &kp LSHFT &kp LSHFT &kp EXCL &kp AT &kp HASH &kp UNDER &kp PLUS &kp LBRC &kp RBRC &kp PIPE &kp LSHFT      
      &kp LGUI &kp SPACE &kp RET &kp RALT  
>;
};
};
};
